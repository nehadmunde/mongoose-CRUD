<%- include('./partials/header.ejs') %>

<div class="container">
    <div class="row">
        <div class="col-sm-6 mt-5">
            <h2 class="alert alert-success text-center" >Add New Student</h2>
            <form method="post" action="/student/update/<%= data._id%>">
                <div class="mb-3">
                    <label for="exampleInputEmail1" class="form-label">Name</label>
                    <input type="text" class="form-control" name="name" id="name" value="<%= data.name%>" /> 
                    </div>

                  <div class="mb-3">
                    <label for="exampleInputPassword1" class="form-label">Age</label>
                    <input type="text" class="form-control" id="age" name="age" value="<%= data.age%>" />
                  </div>  
                  <div class="mb-3">
                    <label for="exampleInputPassword1" class="form-label">Fees</label>
                    <input type="text" class="form-control" id="fees" name="fees" value="<%= data.fees%>"/>
                  </div>
                  <button type="submit" class="btn btn-warning">Update</button>
                  <button type="submit" class="btn btn-secondary">Back to Home</button>
            </form>
        </div>
       
    </div>
</div>

